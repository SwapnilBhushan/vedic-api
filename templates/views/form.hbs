<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      body { font-family: Arial, sans-serif; margin: 0; padding: 20px; } h2 {
      text-align: center; } form { max-width: 600px; margin: 0 auto; } label {
      font-weight: bold; } input[type="text"], input[type="number"], textarea {
      width: 100%; padding: 8px; margin-bottom: 10px; border: 1px solid #ccc;
      border-radius: 4px; box-sizing: border-box; } input[type="tel"] { width:
      calc(100% - 40px); padding: 8px; margin-bottom: 10px; border: 1px solid
      #ccc; border-radius: 4px; box-sizing: border-box; } input[type="submit"] {
      background-color: #4caf50; color: white; padding: 10px 20px; border: none;
      border-radius: 4px; cursor: pointer; width: 100%; }
      input[type="submit"]:hover { background-color: #45a049; } small {
      font-size: 0.8em; color: #666; }
    </style>
  </head>
  <body>
    <h2>Course Addition Form</h2>
    <form action="/api/course" method="POST">
      <div>
        <label for="name">Course Name:</label><br />
        <input type="text" id="name" name="name" required /><br />

        <label for="description">Description:</label><br />
        <textarea
          id="description"
          name="description"
          rows="4"
          cols="50"
          required
        ></textarea><br />

        <label for="enrollment">Total Enrollment:</label><br />
        <input
          type="number"
          id="enrollment"
          name="enrollment"
          required
        /><br />

        <label for="price">Price:</label><br />
        <input type="number" id="price" name="price" required /><br />

        <label for="duration">Duration:</label><br />
        <input type="text" id="duration" name="duration" required /><br />

        <label for="contactNumber">Contact Number:</label><br />
        <input
          type="tel"
          id="contact_number"
          name="contact_number"
          pattern="[0-9]{10}"
          required
        />
      </div>

      <div>
        <input type="submit" value="Submit" />
      </div>
    </form>
  </body>
</html>